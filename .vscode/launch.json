    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "flaskapp.webapp",
                "FLASK_DEBUG": "1",
                "PYTHONUNBUFFERED": "true",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "args": [
                "run",
                "--no-debugger",
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}